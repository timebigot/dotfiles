# Aliases

# sys
alias install='sudo apt-get install'
alias update='sudo apt-get update'
alias upgarde='sudo apt-get upgrade'
alias clr='clear'
alias vimrc='vi ~/.vimrc'
alias bashrc='vi ~/.bash_aliases'

# ls
alias l='ls -l'
alias la='ls -A'
alias ls='ls --color=auto'

# python
alias py='python3'
alias pip='sudo python3 -m pip install'
